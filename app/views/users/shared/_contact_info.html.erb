<h1>Personal Information</h1>
<%= simple_form_for @user do |f| %>
	<%= render :partial => 'shared/error_messages', :locals => {:object => @user} %>
	
	<h3>Full Name</h3>
	<%= f.input :first_name %>
	<%= f.input :last_name %>
	<%= f.input :prefix %>
	<%= f.input :initial %>
	<%= f.input :suffix %>
	
	<h3>Residency</h3>
	<%= f.association :country %>
	<%= f.input :state %>
	<%= f.input :address %>
	<%= f.input :city %>
	<%= f.input :zip, :as => :string %>
	
	<h3>Other</h3>
	<%= f.input :phone, :as => :string, input_html: {class: 'phone_number'}, hint: '<em>Include country and area codes e.g. 12223334444</em>' %>
	<%= f.input :fax_number, :as => :string, input_html: {class: 'phone_number'} %>
	<%= f.input :email %>
	<%= f.input :student, label: 'Student?', hint: '<em>(Yes)</em>'%>
	<%= f.input :member, label: 'IFTA Member?', hint: '<em>(Yes)</em>' %>
	<%= f.input :ifta_member_email, label: 'Member Email' %>  
	
	<p>FYI If you would like an invitation letter for visa or funding purposes you MUST pay for the conference first, 
		<br>then <%= link_to 'check out this page', 'http://www.ifta-congress.org/invitation_letter_request.php', target: '_blank' %> to request your invitation.</p> 	
	<%= f.button :submit %>
<% end %>

