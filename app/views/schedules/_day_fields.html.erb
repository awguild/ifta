<fieldset class="show-fieldset fields">
	<div class="control-group">
		<%= f.label :label, 'Day', :class => 'control-label' %>
		<div class='controls'>
			<%= f.text_field :label %>
		</div>
	</div>

	<div class="control-group">
		<%= f.label :day_date, 'Date', :class => 'control-label' %>
		<div class='controls'>
			<%= f.text_field :day_date, :class => 'datepicker schedule-day' %>
		</div>
	</div>

	<%= f.hidden_field :_destroy %>
  	<%= link_to "Remove day", "#", :class => "btn btn-danger remove_fields" %>

	<h3>Time Slots</h3>
	<%= f.fields_for :time_slots do |builder| %>
		<%= render "time_slot_fields", f: builder %>
	<%- end %>

	<%= link_to_add_fields "Add time slot", f, :time_slots unless f.object.blank? %>
</fieldset>
