<%= form_for [@schedule.conference, @schedule], :class => 'form-horizontal' do |f| %>
<%= render :partial => 'shared/error_messages', :locals => {:object => @schedule} %>

<%= f.fields_for :rooms do |builder| %>
	<%= render 'room_fields', f: builder %>
<%- end %>

<%= link_to_add_fields "Add Room", f, :rooms %><br>

<%= f.submit :class => 'btn btn-primary' %>
<%- end %>