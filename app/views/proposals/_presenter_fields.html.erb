<fieldset>
	<%= render :partial => 'shared/error_messages', :locals => {:object => f.object} %>
	
	<%= f.input :first_name, label: "First name"%>
	
	<%= f.input :last_name, label: "Last name"%>
	<em>Please include country and area codes e.g. 12223334444</em><br>
	<%= f.label 'Home telephone' %>
	<%= f.text_field :home_telephone, class: 'phone_number' %><br>
	
	<%= f.label 'Work telephone' %>
	<%= f.text_field :work_telephone, class: 'phone_number' %><br>
	
	<%= f.label 'Fax number' %>
	<%= f.text_field :fax_number, class: 'phone_number' %><br>
	
	
	<%= f.input :email %>
	
	<%= f.input :affiliation_name, label: "Affiliation name (company, school, etc)"%>
	
	<%= f.input :affiliation_position, label: "Affiliation position"%>
	
	<br>
	<%= f.input :registered, label: "Is this person currently registered for the conference?", hint: '<em>(Yes)</em>'%>
	<%= f.input :other_presentations, label: "Is this person currently listed as a presenter on any other proposals?", hint: '<em>(Yes)</em>'%>
	<br>
	<%= f.input :other_emails, label: "If you answered yes to the question above and this person is using alternative email addresses please list any additional email addresses here (separated by commas) "%>
</fieldset>
